<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" [
    <!ENTITY types SYSTEM "classpath://your/domain/types.xml">
]>

<hibernate-mapping package="org.iplantc.treedata.model">

	<class name="Group">
		<id name="id" column="id">
			<generator class="hilo" />
		</id>
		
		<property name="name" />

		<set name="elements" table="group_element">
			<key column="group_id"/>
			<many-to-many column="element_id"
				unique="true"
				class="Element"/>
		</set>
		<set name="provenance" table="group_prov">
			<key column="group_id"/>
			<many-to-many column="prov_id"
				class="Provenance"/>
		</set>
	</class>
	
	<class name="Element" abstract="true">
		<id name="id" column="id">
			<generator class="hilo" />
		</id>
		
		<union-subclass name="Node" table="node">
			<property name="name" />
		</union-subclass>
		
		<union-subclass name="Triple" table="triple">
			<one-to-one name="subject" class="Node" />
			<one-to-one name="object" class="Node" />
			<one-to-one name="predicate" class="Predicate" />
		</union-subclass>
	</class>
	
	<class name="Predicate">
		<id name="id" column="id">
			<generator class="hilo" />
		</id>
		
		<property name="name" />
	</class>
	
	<class name="Provenance">
		<id name="id" column="id">
			<generator class="hilo" />
		</id>
		<set name="groups" inverse="true" table="group_prov">
			<key column="prov_id"/>
			<many-to-many column="group_id"
				class="Group"/>
		</set>
	</class>

</hibernate-mapping>